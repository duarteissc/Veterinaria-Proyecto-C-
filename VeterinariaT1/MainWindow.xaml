<Window x:Class="VeterinariaT1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeterinariaT1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="375">
    <Grid>
        <Canvas Background="Lavender">
            <Button x:Name="btnInicio" Content="Ingresar" Background="DodgerBlue" Height="33" Canvas.Left="48" Canvas.Top="160" Width="242" Click="Button_Click"/>
            <Label Content="Inicio de Sesión" Height="33" Canvas.Left="48" Canvas.Top="39" Width="242" HorizontalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
            <Label Content="Nombre Usuario" Background="Bisque" Height="27" Canvas.Left="48" Canvas.Top="77" Width="109" FontWeight="Bold"/>
            <Label Content="Contraseña" Background="Bisque" Height="27" Canvas.Left="48" Canvas.Top="114" Width="109" FontWeight="Bold"/>
            <TextBox x:Name="txtUserName" Height="27" Canvas.Left="162" TextWrapping="Wrap" Canvas.Top="77" Width="128"/>
            <PasswordBox x:Name="pwtPassword" Height="27" Canvas.Left="162" Canvas.Top="114" Width="128"/>

        </Canvas>
    </Grid>
</Window>